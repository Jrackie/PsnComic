<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_D3D3D3"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_navi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_navi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px192_size"
        android:background="@color/blue_4169E1"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical" android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_bookcase"
                android:padding="@dimen/px9_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bookcase_black"/>
            <TextView
                android:id="@+id/tv_bookcase"
                android:paddingBottom="@dimen/px9_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bookcase"
                android:textColor="@color/black_000000"
                android:textSize="@dimen/px36_text"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical" android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_discussion"
                android:padding="@dimen/px9_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chat_black"/>
            <TextView
                android:id="@+id/tv_discussion"
                android:paddingBottom="@dimen/px9_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discussion"
                android:textColor="@color/black_000000"
                android:textSize="@dimen/px36_text"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical" android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_discover"
                android:padding="@dimen/px9_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lens_black"/>
            <TextView
                android:id="@+id/tv_discover"
                android:paddingBottom="@dimen/px9_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discover"
                android:textColor="@color/black_000000"
                android:textSize="@dimen/px36_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/px9_size"
                android:src="@drawable/head_black" />

            <TextView
                android:id="@+id/tv_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/px9_size"
                android:text="@string/mine"
                android:textColor="@color/black_000000"
                android:textSize="@dimen/px36_text" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>